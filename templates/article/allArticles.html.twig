{% extends 'layout.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block content %}
<h3><a href="{{ path('article_ajout') }}">Ajouter un article</a></h3>
    <div class="row d-flex justify-content-center text-center">
        {% for article in articles %}
            
        <div class="card m-1" style="width: 18rem;">
        
            <div class="card-body">
            {# pour delete avec confirmation #}
                <a href="{{path('article_delete', {id: article.id} )}}" style="color: red;" 
                onclick="return confirm('êtes vous sûr de vouloire supprimer l\'article ?')">
                <i class="bi bi-trash"></i></a>


                <h5 class="card-title">{{ article.titre }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{ 
                    article.dateDeCreation | date("d-m-y \à H\\hi") }}</h6>
                <p class="card-text">{{ article.contenu | slice(0,300) }} ...<a href="{{ path('article', {id: article.id} ) }}">
                    lire la suite</a></p>
                <a href="{{ path('article_update', {id: article.id}) }}" class="card-link btn btn-outline-primary">Modifier</a>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}
